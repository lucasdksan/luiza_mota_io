{
    "product-summary.shelf#shelf-product-default": {
        "props": {
            "blockClass": [
                "shelf-product-default"
            ]
        },
        "children": [
            "flex-layout.row#shelf-default-top",
            "flex-layout.row#shelf-default-footer",
            "two7-product-summary-discount-flag"
        ]
    },
    "flex-layout.row#shelf-default-top": {
        "title": "Parte de cima da prateleira",
        "props": {
            "blockClass": [
                "shelf-default-top"
            ]
        },
        "children": [
            "product-summary-image#shelf-product-default",
            "product-summary-name#shelf-product-default"
        ]
    },
    "product-summary-image#shelf-product-default": {
        "props": {
            // "height": 290,
            // "width": 260,
            "hoverImage": {
                "criteria": "index",
                "index": 1
            },
            "blockClass": [
                "shelf-product-default--image"
            ]
        }
    },
    "flex-layout.row#shelf-default-footer": {
        "title": "Parte de baixo da prateleira",
        "props": {
            "blockClass": [
                "shelf-default-footer"
            ]
        },
        "children": [
            "flex-layout.row#shelf-default-footer-price",
            "two7-modal-product-shop"
        ]
    },
    "flex-layout.row#shelf-default-footer-price": {
        "title": "Área dos preços",
        "children": [
            "product-summary-price#shelf-product-default",
            "product-installments#shelf-product-default"
        ]
    },
    "product-summary-name#shelf-product-default": { 
        "title": "Nome do produto",
        "props": {
            "blockClass": [
                "shelf-product-default--name"
            ]
        }
    },
    "product-summary-price#shelf-product-default": {
        "title": "Preço do produto",
        "props": {
            "blockClass": [
                "shelf-product-default--price"
            ]
        }
    },
    "product-installments#shelf-product-default": {
        "title": "Parcelamento do produto",
        "props": {
            "message": "ou {installmentsNumber}X de {installmentValue}",
            "blockClass": [
                "shelf-product-default"
            ]
        }
    }
}